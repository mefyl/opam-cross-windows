  ["env" "CFLAGS='%{gmp-sys-windows:cflags}%'" "LDFLAGS='%{gmp-sys-windows:ldflags}%'" "./configure" "--installdir" "%{prefix}%/windows-sysroot/lib" "--ocamllibdir" "%{prefix}%/windows-sysroot/lib/ocaml"]
